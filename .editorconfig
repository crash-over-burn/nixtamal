# http://editorconfig.org/

# Tabs are preferred where possible; this is the only accessible choice

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
trim_trailing_whitespace = true

[*.rst]
indent_style = unset
indent_size = unset

# Spaces are practically required for Nix C++ as magic strings wonâ€™t work
[*.nix]
indent_style = space
indent_size = 3

[dune,dune-project,dune-workspace]
indent_style = space
indent_size = 1
